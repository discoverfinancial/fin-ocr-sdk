{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "build/src/*"]
}
